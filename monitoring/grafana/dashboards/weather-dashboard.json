{
  "title": "Weather Service",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Service availability",
      "targets": [
        {
          "expr": "probe_success",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "HTTP requests",
      "targets": [
        {
          "expr": "sum(rate(weather_http_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(weather_http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ]
}
